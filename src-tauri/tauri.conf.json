{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Weather Alerts",
  "version": "0.1.0",
  "identifier": "com.jamesgray.weatheralerts",

  "build": {
    "frontendDist": "public",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "visible": false,
        "width": 1,
        "height": 1,
        "resizable": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
